echo "Removing old CompetitorAI"
rm -f bin/CompetitorAI.class bonzAI2017/ais/CompetitorAI.jar
rm -fr tmp

echo "Compiling new CompetitorAI"
mkdir tmp
cp src/CompetitorAI.java tmp/
cd tmp
javac -cp .:../bin/ CompetitorAI.java
jar cf CompetitorAI.jar CompetitorAI.class
cp CompetitorAI.jar ../bonzAI2017/ais/

cd ..
rm -fr tmp

echo "Running castles.jar"
cd bonzAI2017
rm -f ais/CompetitorAI.jar
java -jar castles.jar
cd ..
