#!/bin/bash
echo "Removing old CompetitorAI"
rm -f bin/CompetitorAI.class bonzai2017/ais/CompetitorAI.jar

echo "Compiling new CompetitorAI"
mkdir src/tmp
cp src/CompetitorAI.java src/tmp/
cd src

javac tmp/*.java
jar cf tmp/CompetitorAI.jar tmp/*.class
cp tmp/CompetitorAI.jar ../bonzai2017/ais/

rm -fr tmp
cd ..
echo "Running castles.jar"
cd bonzai2017
java -jar castles.jar
cd ..
